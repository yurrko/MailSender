<Window x:Class="Denisevich_MailSender.SendCompleteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Denisevich_MailSender"
        mc:Ignorable="d"
        Title="SendCompleteDialog" Height="125" Width="300" 
        ResizeMode="NoResize">
    <Grid>
        <Label x:Name="LabelMessageSendResult" 
               Content="Почта отправлена" 
               Height="26"
               Margin="0 20 0 0"
               VerticalAlignment="Top"
               HorizontalContentAlignment="Center">
            <Label.Effect>
                <DropShadowEffect/>
            </Label.Effect>
        </Label>
        <Button Content="Ok"
                VerticalAlignment="Bottom" 
                Click="OkButton_OnClick" 
                Height="25"
                Width="100"
                Margin="0 0 0 10"/>

    </Grid>
</Window>
